<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="hr_expense_comp_rule" model="ir.rule">
    <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
    <field name="model_id" ref="model_hr_expense"/>
  </record>
  <record id="mt_expense_approved" model="mail.message.subtype">
    <field name="res_model">hr.expense</field>
    <field name="default" eval="False"/>
  </record>
  <record id="mt_expense_confirmed" model="mail.message.subtype">
    <field name="res_model">hr.expense</field>
    <field name="default" eval="True"/>
  </record>
  <record id="mt_expense_refused" model="mail.message.subtype">
    <field name="res_model">hr.expense</field>
    <field name="default" eval="True"/>
  </record>
  <record id="property_rule_expense_employee" model="ir.rule">
    <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    <field name="groups" eval="[(5, ), (4, ref('base.group_user'))]"/>
    <field name="model_id" ref="model_hr_expense"/>
  </record>
  <record id="property_rule_expense_manager" model="ir.rule">
    <field name="domain_force">[(1, '=', 1)]</field>
    <field name="groups" eval="[(5, ), (4, ref('account.group_account_user')), (4, ref('base.group_hr_manager')), (4, ref('base.group_hr_user'))]"/>
    <field name="model_id" ref="model_hr_expense"/>
  </record>
</odoo>
