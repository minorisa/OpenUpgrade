<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
  
    	<!-- Añadir el campo permitir factura simplificada-->
		<record id="invoice_sii_form_inherit" model="ir.ui.view">
			<field name="name">account.invoice.sii.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="priority" eval="25"/>
			<field name="arch" type="xml">
				<field name="sii_registration_key" position="before">
					<field name="simplified_invoice" />
				</field>
				
			</field>
		</record>

    	<!-- Añadir el campo permitir factura simplificada-->
		<record id="invoice_supplier_sii_form_inherit" model="ir.ui.view">
			<field name="name">account.invoice.supplier.sii.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form" />
			<field name="priority" eval="25"/>
			<field name="arch" type="xml">
				<field name="sii_registration_key" position="before">
					<field name="simplified_invoice" />
				</field>
				
			</field>
		</record>  
  
  
  </data>
</openerp>